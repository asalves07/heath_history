<div class="text-center">
<%- if controller_name != 'sessions' %>
  <%= link_to "Login", new_session_path(resource_name), class: "small" %><br />
<% end %>

<div class="text-center">
	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	  <%= link_to "Cadastrar-se", new_registration_path(resource_name), class: "small" %><br />
	<% end %>
</div>

<div class="text-center">
	<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
	  <%= link_to "Recuperar minha senha?", new_password_path(resource_name), class: "small" %><br />
	<% end %>
</div>	

<div class="text-center">
	<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	  <%= link_to "
Não recebi instruções de confirmação?", new_confirmation_path(resource_name), class: "small" %><br />
	<% end %>
</div>

<div class="text-center">
	<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
	  <%= link_to "
Não recebi instruções de confirmação?", new_unlock_path(resource_name), class: "small" %><br />
	<% end %>
</div>

<div class="text-center">
	<%- if devise_mapping.omniauthable? %>
	  <%- resource_class.omniauth_providers.each do |provider| %>
	    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "small" %><br />
	  <% end %>
	<% end %>
</div>
