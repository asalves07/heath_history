<section id="home-shared_histories">
  <div class="container-fluid">
    <div class="row mt-3">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <span class="float-right">
              <%= link_to "Adicionar #{ @shared_histories.model_name.human }", new_shared_history_path(), class: "btn btn-outline-secondary btn-sm text-uppercase float-right"%>
            </span>
          </div>
          <div class="card-body">
            <%= render "layouts/shared/bootstrap_messages" %>

            <div class="row">
              <div class="col-12">
                <div class= "table-responsive">
                  <table class="table table-striped table-bordered data-table nowrap w-100">
                    <thead>
                      <tr>
                        <th>Dono do histórico</th>
                        <th>Consulta</th>
                        <th>Data de validade</th>
                        <th colspan="1"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @shared_histories.each do |shared_history| %>
                        <tr>
                          <td class="align-middle"><%= shared_history.owner_user.name %></td>
                          <td class="align-middle"><%= link_to "#{shared_history.appointment.title}", appointment_path(shared_history.appointment.id)  %></td>
                          <td class="align-middle"><%= shared_history.expiration_date.strftime('%d/%m/%Y %H:%M') %></td>
                          <td class="align-middle text-center">
                            <%= link_to exam_path(shared_history), :class => "text-info uppercase" do %>
                              <%= icon('fas', 'search') %>
                            <% end %>

                            <%= link_to edit_shared_history_path(shared_history), :class => "text-info uppercase" do %>
                              <%= icon('fas', 'pencil-alt', class: 'strong') %>
                            <% end %>

                            <%= link_to shared_history, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => "text-danger uppercase ml-4" do %>
                              <%= icon('fas', 'trash', class: 'strong') %>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


