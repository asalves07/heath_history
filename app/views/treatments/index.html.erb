<section id="home-treatments">
  <div class="container-fluid">

    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "Tratamentos", treatments_path %>
      </li>
      <li class="breadcrumb-item active">Listar Tratamentos</li>
    </ol>

    <div class="row mt-3">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <span class="float-right">
              <%= link_to "Adicionar #{ @treatments.model_name.human }", new_treatment_path(), class: "btn btn-outline-secondary btn-sm text-uppercase float-right"%>
            </span>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-12">
                <div class= "table-responsive">
                  <table class="table table-striped table-bordered data-table nowrap w-100">
                    <thead>
                      <tr>
                        <th colspan="1"></th>
                        <th>Appointment</th>
                        <th>User</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Place</th>
                        <th>Date</th>
                        <th>Kind</th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @treatments.each do |treatment| %>
                        <tr>
                          <td class="align-middle text-center">
                            <%= link_to edit_treatment_path(treatment), :class => "text-info uppercase" do %>
                              <%= icon('fas', 'pencil-alt', class: 'strong') %>
                            <% end %>
                            <%= link_to treatment, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, :class => "text-danger uppercase ml-4" do %>
                              <%= icon('fas', 'trash', class: 'strong') %>
                            <% end %>
                          </td>
                        <td class="align-middle"><%= treatment.appointment %></td>
                        <td class="align-middle"><%= treatment.user %></td>
                        <td class="align-middle"><%= treatment.title %></td>
                        <td class="align-middle"><%= treatment.description %></td>
                        <td class="align-middle"><%= treatment.place %></td>
                        <td class="align-middle"><%= treatment.date %></td>
                        <td class="align-middle"><%= treatment.kind %></td>
                        </tr>


                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


