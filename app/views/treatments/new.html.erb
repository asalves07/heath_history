<section id="edit-treatments" >
  <div class="container-fluid">

    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "Tratamentos", treatments_path %>
      </li>
      <li class="breadcrumb-item active">Novo Tratamento</li>
    </ol>

    <div class="row mt-2">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <p class="mb-0 text-uppercase gray float-right">Novo
              <strong><%= @treatment.model_name.human %>
            </p>
          </div>
          <div class="card-body pt-0">
            <div class="row">
              <div class="col-12">
                <%= render 'form', treatment: @treatment %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
